<input id="color-mode" type="checkbox" class="sr-only" id="darkmode-toggle" name="color-mode" />

<label for="color-mode" class="color-mode toggle">
	<span class="dark-mode-hide">Dark Mode</span>
	<span class="light-mode-hide">Light Mode</span>
</label>

<style is:global>
	:root {
		--theme-bg: var(--clr-white);
		--theme-text: var(--clr-orange);
		--theme-hover: var(--clr-black);
		--theme-media: var(--clr-white);
		/* --media-blend: darken; */
		/* --img-mix-blend: screen; */
		/* --img-clr-overlay: var(--img-clr-overlay); */
		--img-clr-mix: color;
		--gradient-blend: var(--gradient-blend);
		--gradient-invert: var(--gradient-invert);
		--gradient: 255, 213, 97;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--theme-bg: var(--clr-black);
			--theme-text: var(--clr-orange);
			--theme-hover: var(--clr-white);
			--theme-media: var(--clr-orange);
			/* --media-blend: screen; */
			/* --img-mix-blend: var(--img-mix-blend); */
			/* --img-clr-overlay: var(--clr-black); */
			--img-clr-mix: color;
			--gradient-blend: multiply;
			--gradient-invert: none;
			--gradient: 57, 10, 87;
		}
	}

	#color-mode,
	label {
		position: fixed;
		z-index: 100;
	}

	#color-mode:checked ~ * {
		--theme-bg: var(--clr-black);
		--theme-text: var(--clr-orange);
		--theme-hover: var(--clr-white);
		--theme-media: var(--clr-orange);

		--media-blend: screen;
		/* --img-mix-blend: var(--img-mix-blend); */
		/* --img-clr-overlay: var(--clr-black); */
		/* --img-clr-mix: color; */

		--gradient-blend: multiply;
		--gradient-invert: none;
		--gradient: 57, 10, 87;
	}

	@media (prefers-color-scheme: dark) {
		#color-mode:checked ~ * {
			--theme-bg: var(--clr-white);
			--theme-text: var(--clr-orange);
			--theme-hover: var(--clr-black);
			--theme-media: var(--clr-white);
			--media-blend: darken;
			/* --img-mix-blend: screen; */
			/* --img-clr-overlay: var(--clr-black); */
			/* --img-clr-mix: color; */

			--gradient: 0, 0, 0;
			--gradient-blend: screen;
			--gradient-invert: invert(100%);
		}
	}

	.light-mode-hide {
		display: none;
	}

	@media (prefers-color-scheme: dark) {
		.dark-mode-hide {
			display: none;
		}
	}

	@media (prefers-color-scheme: dark) {
		.light-mode-hide {
			display: initial;
		}
	}

