	input[type='checkbox'] {
		position: absolute;
		opacity: 0.00001;
	}

	.color-scheme-wrapper {
		transition: background var(--theme-transition);
		transition: color var(--theme-transition);
		background: var(--theme-bg);
		min-height: 100vh;
		color: var(--theme-text);
	}

	.toggle {
		display: block;
		position: absolute;
		top: 1rem;
		right: 1rem;
		cursor: pointer;
		/* border: 0.125em solid currentColor; */
		border-radius: 2em;
		background: var(--theme-text);
		width: 3.75em;
		height: 2em;
		color: var(--theme-bg);
		font-size: calc(0.875 * var(--font-size-sm)) !important;
	}
	.toggle span {
		display: block;
		position: absolute;
		top: 0.25em;
		left: 0.25em;
		z-index: 2;
		transition: left 0.25s;
		border-radius: 2em;
		background-color: currentColor;
		width: 1.5em;
		height: 1.5em;
		overflow: hidden;
		text-indent: -9999px;
	}

	.toggle::before,
	.toggle::after {
		display: block;
		position: absolute;
		z-index: 1;
		border-radius: 1em;
		content: '';
	}

	.toggle::after {
		top: 0.125em;
		right: 0.9em;
		box-shadow: 0.25em 0.25em #5901d8;
		width: 1.125em;
		height: 1.125em;
	}

	.toggle::before {
		top: 0.7em;
		left: 0.7em;
		outline: 0.25em dotted #ffc409;
		outline-offset: 0.125em;
		background-color: #ffc409;
		width: 0.625em;
		height: 0.625em;
	}

	input:checked ~ .toggle span {
		left: 2em;
	}

	@media (min-width: 767px) {
		.toggle {
			font-size: calc(0.5 * var(--font-size-sm)) !important;
		}
	}
</style>
