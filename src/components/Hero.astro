---
import Marquee from './Marquee.astro'
---

<!-- <pre class="debug">Hero.astro</pre> -->
<div id="grain"></div>
<header>
	<Marquee text="Rien Bexkens" />
	<div class="details">
		<div class="name">
			<h2>a.k.a Rini Tortellini</h2>
		</div>
		<div class="roles">
			<ul>
				<li>Director</li>
				<li>Writer</li>
				<li>Producer</li>
			</ul>
		</div>

		<div>
			<h2>Office & Studio</h2>
			<ul>
				<li>
					<a
						class="link"
						href="https://google.com/maps/dir/51.9238281,4.493274/Nieuwe+Binnenweg+23,+3014+GB+Rotterdam"
						target="blank">Nieuwe Binnenweg 23</a
					>
				</li>
				<li>3014 GB, Rotterdam</li>
			</ul>
		</div>

		<div>
			<h2>Contact</h2>
			<ul>
				<li><a href="mailto:shoot@rienbexkens.com">shoot@rienbexkens.com</a></li>
				<li><a href="tel:+31639639578">+31 (0)6 39639578</a></li>
			</ul>
		</div>
	</div>
</header>

<style>
	header {
		overflow: hidden;
		display: grid;
		grid-template-rows: min-content 1fr;
		gap: var(--spacer-vw-gap);
		min-height: 100vh;
	}

	.details {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 0 var(--spacer-vw-gap);
		padding: 0 var(--spacer-vw-margin);
	}
	.details > div {
		border-left: var(--border-width) solid var(--theme-text);
		padding: 0 calc(var(--spacer-vw-padding) / 2);
	}
	h2 {
		font-size: var(--font-size-xs);
		line-height: 112.5%;
	}
	ul {
		/* padding: calc(0.5 * var(--spacer-vw-gap)) 0 var(--spacer-vw-gap) 0; */
		padding: 0;
	}

	li,
	li a {
		font-family: var(--font-body);
		font-size: var(--font-size-xs);
		font-weight: 600;
		line-height: 112.5%;
		text-decoration: none;
	}

	@media only screen and (min-width: 768px) {
		.details {
			display: grid;
			grid-template-columns: 1fr 1fr 1fr 1fr;
			gap: var(--spacer-vw-gap);
			padding: var(--spacer-vw-margin);
			padding-bottom: 0;
		}
		ul {
			/* padding: calc(0.5 * var(--spacer-vw-gap)) 0 calc(1.5 * var(--spacer-vw-gap)) 0; */
			padding: 0;
		}
		h2 {
			font-size: var(--font-size-xs);
			line-height: 112.5%;
		}

		li,
		li a {
			font-size: var(--font-size-xs);
			line-height: 112.5%;
		}
	}

	/* 
